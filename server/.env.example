# ============================================
# MindTrace Server Configuration
# ============================================

# Server Settings
PORT=8000
CLIENT_URL=http://localhost:5173
GLASS_URL=http://localhost:5174

# Security
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-min-32-chars-for-jwt-security

# ============================================
# AI Services
# ============================================

# Google Gemini API (Required for AI features)
# Get your API key from: https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================
# Database Configuration
# ============================================

# SQLite (Development - Default)
DATABASE_URL=sqlite:///./mindtrace.db

# PostgreSQL (Production - Recommended)
# DATABASE_URL=postgresql://username:password@localhost:5432/mindtrace

# ============================================
# ChromaDB Configuration
# ============================================

# Local ChromaDB Server
CHROMA_HOST=localhost
CHROMA_PORT=8000

# ChromaDB Cloud (Optional)
# CHROMA_HOST=api.trychroma.com
# CHROMA_PORT=443
# CHROMA_API_KEY=your-chroma-api-key
# CHROMA_TENANT=your-tenant-name
# CHROMA_DATABASE=your-database-name

# ============================================
# Model Configuration (Optional)
# ============================================

# Face Recognition Model
# Options: buffalo_s (fast), buffalo_l (accurate)
FACE_MODEL=buffalo_s

# Speech Recognition Model
# Options: tiny.en, base.en, small.en, medium.en
WHISPER_MODEL=base.en

# ============================================
# Performance Tuning (Optional)
# ============================================

# Face Detection Size (smaller = faster, larger = more accurate)
FACE_DETECTION_SIZE=320

# Face Recognition Threshold (0.0-1.0, lower = stricter)
FACE_RECOGNITION_THRESHOLD=0.45

# ASR Chunk Duration (milliseconds)
ASR_CHUNK_DURATION=30

# ============================================
# Logging (Optional)
# ============================================

LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
