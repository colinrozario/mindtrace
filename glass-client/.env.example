# ============================================
# MindTrace Glass Client Configuration
# ============================================

# API Server URL
VITE_API_URL=http://localhost:8000

# WebSocket URL (usually same as API URL)
VITE_WS_URL=ws://localhost:8000

# ============================================
# HUD Configuration
# ============================================

# Face Recognition Update Interval (milliseconds)
VITE_FACE_UPDATE_INTERVAL=1000

# Transcription Display Duration (milliseconds)
VITE_TRANSCRIPT_DURATION=5000

# Maximum Faces to Display
VITE_MAX_FACES_DISPLAY=3

# ============================================
# Optional Configuration
# ============================================

# Enable Debug Mode
VITE_DEBUG=false

# Camera Resolution
VITE_CAMERA_WIDTH=640
VITE_CAMERA_HEIGHT=480

# Audio Sample Rate (Hz)
VITE_AUDIO_SAMPLE_RATE=16000
